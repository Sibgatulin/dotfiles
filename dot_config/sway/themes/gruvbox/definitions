# some global theme specific variables
set $gtk-theme Gruvbox-Material-Dark
set $icon-theme Papirus-Dark-Maia
set $cursor-theme xcursor-breeze
set $gui-font Fira Mono 12
# set $term-font RobotoMono Nerd Font 14
set $term-font Fira Mono 14
set $kvantum-theme Matchama-Dark

# Black + DarkGrey
set $color0  #282828
set $color8  #928374
# DarkRed + Red
set $color1  #cc241d
set $color9  #fb4934
# DarkGreen + Green
set $color2  #98971a
set $color10 #b8bb26
# DarkYellow + Yellow
set $color3  #d79921
set $color11 #fabd2f
# DarkBlue + Blue
set $color4  #458588
set $color12 #83a598
# DarkMagenta + Magenta
set $color5  #b16286
set $color13 #d3869b
# DarkCyan + Cyan
set $color6  #689d6a
set $color14 #8ec07c
# LightGrey + White
set $color7  #a89984
set $color15 #ebdbb2

set $background-color $color0
set $text-color $color7
set $selection-color $color8
set $accent-color $color3

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $color4 $color12 $color0 $color12 $color4
client.focused_inactive $color7 $color1 $color5 $color3 $color7
client.unfocused        $color8 $color0 $color5 $color1 $color8
client.urgent           $color1 $color8 $color0 $color8 $color1
client.placeholder      $color0 $color0 $color5 $color0 $color0
client.background       $color7
