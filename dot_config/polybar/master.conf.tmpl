[colors]
background = ${xrdb:background:#222}
background-alt = #444
foreground = ${xrdb:foreground:#222}
foreground-alt = ${xrdb:color8:#555}
alert = ${xrdb:color9:#bd2c40}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/master]
width = 100%
height = 27

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-color = ${xrdb:color4:#00000000}

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

; font-0 = Source Code Pro:style=Regular:size=12
font-0 = Fira Code:style=Regular:size=12
font-1 = unifont:fontformat=truetype:size=10:antialias=false;0
font-2 = FontAwesome:style=Regular

{{- if eq .chezmoi.hostname "renat-pc" }}
modules-left = bspwm mpd
modules-right = wlan bluetooth xkeyboard memory swap cpu battery alsa date time
{{- end }}
{{- if eq .chezmoi.hostname "p180380" }}
modules-left = bspwm
modules-right = ethernet xkeyboard memory swap cpu  date time
{{- end }}

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize


